<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/markerImage"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_play_light"
        android:layout_alignBottom="@+id/marketDes" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="markerTitle"
        android:background="@android:color/transparent"
        android:id="@+id/markerTitle"
        android:typeface="serif"
        android:textColor="#3F51B5"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="normal"
        android:textSize="12dp"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/markerImage"
        android:layout_alignRight="@+id/marketDes"
        android:layout_alignEnd="@+id/marketDes" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="markerDes"
        android:background="@android:color/transparent"
        android:id="@+id/marketDes"
        android:singleLine="true"
        android:ellipsize="end"
        android:typeface="serif"
        android:textColor="#3F51B5"
        android:textStyle="italic"
        android:textSize="10dp"
        android:layout_below="@+id/markerDist"
        android:layout_toRightOf="@+id/markerImage"
        android:layout_toEndOf="@+id/markerImage" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0.0"
        android:background="@android:color/transparent"
        android:id="@+id/markerDist"
        android:gravity="right"
        android:typeface="serif"
        android:textStyle="normal"
        android:textColor="#3F51B5"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/markerTitle"
        android:layout_toRightOf="@+id/markerTitle"
        android:layout_toEndOf="@+id/markerTitle" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pMarBar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/markerTitle"
        android:layout_toStartOf="@+id/markerTitle"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:indeterminate="false" />
</RelativeLayout>